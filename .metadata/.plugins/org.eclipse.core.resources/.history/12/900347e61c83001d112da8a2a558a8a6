    private void btnchangeMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_btnchangeMouseClicked
       btnchange.setCursor(Cursor.getPredefinedCursor(Cursor.HAND_CURSOR));
      String change = (String)jcbchange.getSelectedItem();
      String accnum = ConfirmDetailsforDetails.Instance.getAccountNumber();
      String changeto = jtfchangeto.getText();
      Customer foundCustomerAccountNum = Customer.findCustomerAccountNum(accnum);
      if (change.equals("First Name")){
      foundCustomerAccountNum.setcustomerFirst(changeto);
      } 
      else if (change.equals("Last Name")){
      foundCustomerAccountNum.setcustomerLast(changeto);
      } 
       
      else if (change.equals("PPS Number")){
      foundCustomerAccountNum.setcustomerPPSN(changeto);
      foundCustomerAccountNum.setcustomerPass(change);
      } 
      
      else if (change.equals("Password")){
      foundCustomerAccountNum.setcustomerPass(changeto);
      } 
      
      new DetailsChanged().setVisible(true);
       
    }//GEN-LAST:event_btnchangeMouseClicked

