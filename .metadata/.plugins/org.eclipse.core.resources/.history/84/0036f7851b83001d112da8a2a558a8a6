    private void btncreateActionPerformed(java.awt.event.ActionEvent evt) {                                          
   

       

     adminusername = jtfUserName.getText();
    adminpass = jpfPassword.getText();
     if (adminpass.length()<7){
         
   new ErrorAdmin().setVisible(true);
    
     }
     else{
         Administator Admin = new Administator(adminusername,adminpass);
         Administator.listofAdmins.add(Admin);
     this.dispose();
     new AdeBank().setVisible(true);

  new LoadingAdminaccount().setVisible(true);
         
     }
    }                                           

